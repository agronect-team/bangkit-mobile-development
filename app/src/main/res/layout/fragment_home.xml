<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_2"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="58dp"
                android:layout_marginEnd="64dp"
                android:layout_marginTop="20dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_photo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="50dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/iv_logoprofile"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/businessman"
                        android:scaleType="centerCrop"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/halo"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/cv_photo"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/rizky"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_profile"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="26dp"
                    android:textColor="@color/white"
                    android:text="@string/text_klasifikasi"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="0dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_medium"
                    android:textStyle="bold"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:textColor="@color/black"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_plant1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:backgroundTint="@color/black"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:gravity="center"
                    android:background="@color/brown"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="50dp">

                        <ImageView
                            android:id="@+id/corn"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/corn"
                            android:layout_gravity="center"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="@string/jagung"
                        android:background="@drawable/circle_white"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginTop="8dp"
                        android:textAlignment="center"
                        android:textSize="14sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_plant2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:backgroundTint="@color/black"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:gravity="center"
                    android:background="@color/brown"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="50dp">

                        <ImageView
                            android:id="@+id/potato"
                            android:layout_width="40dp"
                            android:layout_height="50dp"
                            android:src="@drawable/potato"
                            android:layout_gravity="center"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="@string/kentang"
                        android:background="@drawable/circle_white"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginTop="8dp"
                        android:textAlignment="center"
                        android:textSize="14sp" />
                    <!--            app:cardCornerRadius="10dp">-->

                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:textColor="@color/black"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_plant3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:backgroundTint="@color/black"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:gravity="center"
                    android:background="@color/brown"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="50dp">

                        <ImageView
                            android:id="@+id/cassava"
                            android:layout_width="40dp"
                            android:layout_height="50dp"
                            android:src="@drawable/cassava"
                            android:layout_gravity="center"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="@string/Singkong"
                        android:background="@drawable/circle_white"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginTop="8dp"
                        android:textAlignment="center"
                        android:textSize="14sp" />
                    <!--            app:cardCornerRadius="10dp">-->


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_plant4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:backgroundTint="@color/black"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:gravity="center"
                    android:background="@color/brown"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="50dp">

                        <ImageView
                            android:id="@+id/banana"
                            android:layout_width="40dp"
                            android:layout_height="50dp"
                            android:src="@drawable/banana"
                            android:layout_gravity="center"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="@string/Pisang"
                        android:background="@drawable/circle_white"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginTop="8dp"
                        android:textAlignment="center"
                        android:textSize="14sp" />
                    <!--            app:cardCornerRadius="10dp">-->


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:textColor="@color/black"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_plant5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:backgroundTint="@color/black"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:gravity="center"
                    android:background="@color/brown"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="50dp">

                        <ImageView
                            android:id="@+id/orange"
                            android:layout_width="40dp"
                            android:layout_height="50dp"
                            android:src="@drawable/orange"
                            android:layout_gravity="center"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="@string/Jeruk"
                        android:background="@drawable/circle_white"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginTop="8dp"
                        android:textAlignment="center"
                        android:textSize="14sp" />
                    <!--            app:cardCornerRadius="10dp">-->

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_plant6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:backgroundTint="@color/black"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:gravity="center"
                    android:background="@color/brown"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="50dp">

                        <ImageView
                            android:id="@+id/rice"
                            android:layout_width="40dp"
                            android:layout_height="50dp"
                            android:src="@drawable/rice"
                            android:layout_gravity="center"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="@string/Padi"
                        android:background="@drawable/circle_white"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginTop="8dp"
                        android:textAlignment="center"
                        android:textSize="14sp" />
                    <!--            app:cardCornerRadius="10dp">-->

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:textColor="@color/black"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_plant7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:backgroundTint="@color/black"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:gravity="center"
                    android:background="@color/brown"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="50dp">

                        <ImageView
                            android:id="@+id/chili"
                            android:layout_width="40dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:src="@drawable/tomato" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="@string/tomat"
                        android:background="@drawable/circle_white"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginTop="8dp"
                        android:textAlignment="center"
                        android:textSize="14sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_plant8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:backgroundTint="@color/black"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:gravity="center"
                    android:background="@color/brown"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="50dp">

                        <ImageView
                            android:id="@+id/Apple"
                            android:layout_width="40dp"
                            android:layout_height="50dp"
                            android:src="@drawable/apple"
                            android:layout_gravity="center"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="@string/Apel"
                        android:background="@drawable/circle_white"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginTop="8dp"
                        android:textAlignment="center"
                        android:textSize="14sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </LinearLayout>
</ScrollView>